package application;

import java.util.ArrayList;
import java.util.List;

public class Board {
	List<Field> board = new ArrayList<Field>();
	int columns;
	int rows;
	void manualnewBoard(){
		
	}

	void newBoard() {
		for (int y = 0; y < columns; y++) {
			for (int x = 0; x < rows; x++) {
				board.add(new Field(x, y));
			}
		}
	}

	public List<Field> getBoard() {
		return board;
	}

}
